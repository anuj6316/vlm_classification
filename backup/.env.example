# --- OCR Engine Configuration ---
# Model to use for OCR inference (PaddleOCR-VL-1.5-0.9B is default)
OCR_MODEL_NAME=PaddleOCR-VL-1.5-0.9B

# Enable vLLM backend for faster inference (PagedAttention + FlashAttn)
# Set to "false" to fall back to native PaddlePaddle inference
OCR_USE_VLLM=true

# Default parsing mode: document | table | formula | seal | text_spotting
OCR_DEFAULT_MODE=document

# --- Output Configuration ---
# Output format: markdown | json | text
OUTPUT_FORMAT=markdown

# --- Performance Tuning ---
# Maximum number of pages to process concurrently in a batch
MAX_BATCH_SIZE=4

# Maximum image dimension (pixels). Larger images are resized to prevent OOM.
MAX_IMAGE_DIM=4096

# DPI for rendering PDF pages to images (higher = better quality, slower)
PDF_RENDER_DPI=50

# --- Logging ---
# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
